{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDirs": [
      "src",
      "src/components",
      "containers",
      "lib"
    ],
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*",
    "src/**/*",
    "src/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./typings.d.ts"
  ]
}
